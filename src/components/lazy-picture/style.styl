:host
  display inline-block
  position relative

.thumbnail
  position absolute
  width 100%
  opacity 1

.img
  width 100%
  opacity 0

img
  transition opacity 1s

img:not([src])
  opacity 0

img[cover]
  height 100%
  width 100%
  object-fit cover

.image-loaded
  opacity 0

.image-img-loaded
  opacity 1